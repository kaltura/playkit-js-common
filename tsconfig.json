{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "outDir": "dist",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": false,
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "preserveSymlinks": true,
    "types": ["node"]
  },
  "include": ["src/**/*.tsx", "src/**/*.ts", "node_modules/kaltura-player-js/ts-typed"],
  "exclude": ["src/**/*.stories.tsx"]
}
